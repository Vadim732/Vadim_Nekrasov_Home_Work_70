@model Category

@{
    ViewBag.Title = "Создать новую категорию";
}

<div class="container">
    <div class="bg-dark text-center pt-5 pb-4 border-radius-1">
        <h3 class="text-white mb-5">Форма для создания категории</h3>
        <form asp-action="CreateCategory" asp-controller="HeadHunter" asp-anti-forgery="true">
            <div asp-validation-summary="ModelOnly" class="text-error"></div>
            <div class="form_row mb-3">
                <label for="" class="col-4">
                    <input type="text" class="form-control" asp-for="Name" placeholder="Введите название категории">
                    <span asp-validation-for="Name" class="text-error" />
                </label>
            </div>
            <button type="submit" class="btn btn-outline-light mb-3 w-25">Добавить новую категорию</button>
        </form>
    </div>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}