@model List<Vacancy>

@{
    ViewBag.Title = "Все доступные вакансии";
}

<div class="container mt-4">
    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-warning" role="alert">
            Доступных вакансий не найдено.
        </div>
    }
    else
    {
        <div class="row row-cols-1 g-3">
            @foreach (var v in Model)
            {
                <div class="col">
                    <a href="@Url.Action("DetailsVacancy", "HeadHunter", new { id = v.Id })" class="card shadow-sm text-decoration-none">
                        <div class="card-body">
                            <h5 class="card-title">@v.Title</h5>
                            <p class="card-text text-muted">Обновлено: @v.UpdatedAt</p>
                        </div>
                    </a>
                </div>
            }
        </div>
    }
</div>