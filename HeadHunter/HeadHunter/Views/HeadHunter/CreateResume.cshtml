@model HeadHunter.Models.Resume

@{
    ViewBag.Title = "Создание резюме";
}

<div class="container mt-4">
    <h1 class="text-center">Создание резюме</h1>
    <form asp-action="CreateResume" asp-controller="HeadHunter" method="post" class="mt-4">
        <div class="mb-3">
            <label for="Title" class="form-label">Название резюме</label>
            <input asp-for="Title" class="form-control" id="Title" placeholder="Введите название резюме" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="ExpectedSalary" class="form-label">Ожидаемая зарплата</label>
            <input asp-for="ExpectedSalary" class="form-control" id="ExpectedSalary" placeholder="Укажите ожидаемую зарплату" />
            <span asp-validation-for="ExpectedSalary" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="Telegram" class="form-label">Telegram</label>
            <input asp-for="Telegram" class="form-control" id="Telegram" placeholder="Введите Telegram" />
            <span asp-validation-for="Telegram" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="Email" class="form-label">Email</label>
            <input asp-for="Email" class="form-control" id="Email" placeholder="Введите Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="PhoneNumber" class="form-label">Номер телефона</label>
            <input asp-for="PhoneNumber" class="form-control" id="PhoneNumber" placeholder="Введите номер телефона" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="FacebookLink" class="form-label">Ссылка на Facebook</label>
            <input asp-for="FacebookLink" class="form-control" id="FacebookLink" placeholder="Введите ссылку на Facebook" />
            <span asp-validation-for="FacebookLink" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="LinkedInLink" class="form-label">Ссылка на LinkedIn</label>
            <input asp-for="LinkedInLink" class="form-control" id="LinkedInLink" placeholder="Введите ссылку на LinkedIn" />
            <span asp-validation-for="LinkedInLink" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="CategoryId" class="form-label">Категория</label>
            <select asp-for="CategoryId" class="form-select">
                <option value="">Выберите категорию</option>
                @foreach (var a in ViewBag.Categories)
                {
                    <option value="@a.Id">@a.Name</option>
                }
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Создать резюме</button>
    </form>
</div>
